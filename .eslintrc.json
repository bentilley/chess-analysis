{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "quotes": ["error", "double"],
    "arrow-parens": ["error", "as-needed"],
    "no-use-before-define": ["off"],
    "consistent-return": ["off"],
    "no-plusplus": ["off"]
  }
}
